#valid cfg or not
 #include<stdio.h>
#include<string.h>
#include<ctype.h>
int main() {
    char a[100];
    int flag=0;
    fgets(a,sizeof(a),stdin);
    int len = strlen(a);
    a[len-1]='\0';
    
    if(isupper(a[0])&&len>3){
    for(int i=3;i<len;i++){
        
            if(isupper(a[i])&&a[i-1]==' '&&a[i+1]=='-'){
                flag=1;
            }
        }
    }
    if(flag){
        printf("This is a valid cfg");
    }
    else{
        printf("This is not a valid cfg");
    }
}

#counting no of productions
#include<stdio.h>
#include<string.h>
#include<ctype.h>
int main() {
    char a[100];
    int flag=0;
    fgets(a,sizeof(a),stdin);
    int len = strlen(a);
    a[len-1]='\0';
    
    for(int i=3;i<len;i++){
        if(a[i]==' '){
            flag=flag+1;
        }
    }
    printf("number of productions %d",flag);
}

#alternatices for a single production
#include<stdio.h>
#include<string.h>
#include<ctype.h>
int main() {
    char a[100];
    int flag=0;
    fgets(a,sizeof(a),stdin);
    int len = strlen(a);
    a[len-1]='\0';
    
    for(int i=3;i<len;i++){
        if(a[i]=='/'){
            flag=flag+1;
        }
    }
    printf("number of alternatives for a production %d",flag+1);
}



#no of terminals
#include<stdio.h>
#include<string.h>
#include<ctype.h>
int main() {
    char a[100];
    int j,c=0;
    fgets(a,sizeof(a),stdin);
    int len = strlen(a);
    a[len-1]='\0';
    int flag[256]={0};
    
    for(int i=3;i<len;i++){
        if(!isupper(a[i])&&a[i-1]=='>'||a[i-1]=='/'&&a[i+1]=='/'||a[i+1]==' '){
            j = (int)a[i];
            flag[j]=1;
        }
    }
    for(int i=0;i<256;i++){
        if(flag[i]>0){
            c=c+1;
        }
    }


#no of non terminals
#include<stdio.h>
#include<string.h>
#include<ctype.h>
int main() {
    char a[100];
    int j,c=0;
    fgets(a,sizeof(a),stdin);
    int len = strlen(a);
    a[len-1]='\0';
    int flag[256]={0};
    
    for(int i=3;i<len;i++){
        if(isupper(a[i])){
            j = (int)a[i];
            flag[j]=1;
        }
    }
    for(int i=0;i<256;i++){
        if(flag[i]>0){
            c=c+1;
        }
    }
    printf("no of non terminals %d",c+1);
}


    printf("no of terminals %d",c);
}


